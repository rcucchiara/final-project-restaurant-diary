<resources>

    <!-- Main menu theme -->
    <style name="MainMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Form header theme -->
    <style name="FormTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorFormPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorFormAccent</item>
    </style>

    <!-- Main menu title theme -->
    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingTop">64dp</item>
        <item name="android:paddingBottom">64dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <!-- Begins the styles in the FORM ACTIVITIES -->

        <!-- theme for the input fields in the form -->
        <style name="FormInputFieldStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">2</item>
            <item name="android:paddingLeft">4dp</item>
            <item name="android:orientation">vertical</item>
        </style>

        <!-- theme for the short form prompts -->
        <style name="FormLabelStyle">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:paddingTop">16dp</item>
            <item name="android:textAppearance">?android:textAppearanceSmall</item>
            <item name="android:textColor">@color/formTextColor</item>
        </style>

        <!-- theme for the short edit texts in the form -->
        <style name="FormEditTextShortStyle">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:textAppearance">?android:textAppearanceMedium</item>
        </style>

        <!-- theme for the note label in the form activities-->
        <style name="FormLabelNoteStyle">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:textAppearance">?android:textAppearanceSmall</item>
            <item name="android:textColor">@color/formTextColor</item>
        </style>

        <!-- theme for the note paragraph in form activities -->
        <style name="FormEditTextLongStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:inputType">textMultiLine|textCapSentences</item>
            <item name="android:minLines">1</item>
            <item name="android:lines">5</item>
            <item name="android:maxLines">10</item>
            <item name="android:scrollbars">none</item>
            <item name="android:hint">@string/form_hint_note</item>
        </style>

        <!-- theme for the save button in the form -->
        <style name="FormSaveButtonStyle">
            <item name="android:layout_width">@dimen/form_button_width</item>
            <item name="android:layout_height">@dimen/form_button_height</item>
            <item name="android:text">@string/form_button_save</item>
            <item name="android:background">@color/formSaveButtonColor</item>
        </style>

        <!-- theme for the delete button in the form -->
        <style name="FormDeleteButtonStyle">
            <item name="android:layout_width">@dimen/form_button_width</item>
            <item name="android:layout_height">@dimen/form_button_height</item>
            <item name="android:text">@string/form_button_delete</item>
            <item name="android:background">@color/formDeleteButtonColor</item>
        </style>
    <!-- ends the styles used in the FORM ACTIVITIES -->

    <!-- ListView style -->
    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/ListViewGrey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">4dp</item>
    </style>

    <!-- text formatting the the search list items -->
    <style name="searchItemBodyStyle">
        <item name="android:textColor">@color/searchRestaurantTextColor</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
