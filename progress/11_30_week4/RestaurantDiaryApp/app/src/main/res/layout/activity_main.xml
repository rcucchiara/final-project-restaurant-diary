<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.restaurantdiary.MainActivity"
    android:orientation="vertical"
    android:id="@+id/main_menu_layout"
    android:background="@drawable/gradient_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Text view that displays the apps title -->
        <TextView style="@style/titleStyle"
            android:text="@string/main_menu_title"
            android:fontFamily="cursive"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top" >

        <!-- First button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_main_menu_have_been"
                android:layout_width="@dimen/main_menu_button_size"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_been"
                android:padding="16dp"/>

        </LinearLayout>

        <!-- Second button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_main_menu_want_to"
                android:layout_width="@dimen/main_menu_button_size"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_want"
                android:padding="16dp" />
            </LinearLayout>

        <!-- Third button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/button_main_menu_search"
                android:layout_width="@dimen/main_menu_button_size"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_search"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>